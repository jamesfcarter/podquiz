{{define "content"}}
{{with .Quiz}}
<h1>{{.Name}}</h1>
{{template "player" .}}
<p class='description'>{{.DescriptionHTML}}</p>
<section class='comments'>
  <h2>Comments</h2>
  {{range .Comments}}
  <section class='comment'>
    <h3>{{.Author}}</h3>
    <p class='date'>{{indexTime .Time}}</p>
    <p>{{.HTML}}</p>
  </section>
  {{end}}
  <div class='commentform'>
    <form action='comment' method='post'>
      <input name='q' type='hidden' value='650'>
      <span class='label'>Name:</span>&nbsp;
      <input class='name' name='name' type='text'><br>
      <span class='label'>Comment:</span><br>
      <textarea name='comment'></textarea><br>
      <span class='label'>Episode number <small>(see above)</small>:</span>
      <input class='human' name='human' type='text' value=''><br>
      <input class='submit' name='submit' type='submit' value='Submit Comment'>
    </form>
  </div>
</section>
{{end}}
{{end}}
